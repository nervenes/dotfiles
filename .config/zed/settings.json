{
  "ui_font_size": 16,
  "ui_font_family": "SF Pro",

  "buffer_font_size": 13,
  "buffer_font_family": "SF Mono",
  "buffer_line_height": "standard",

  "restore_on_startup": "none",
  "auto_install_extensions": {
    "html": false
  },

  "format_on_save": "off",
  "autosave": {
    "after_delay": {
      "milliseconds": 1000
    }
  },

  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },

  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "One Dark"
  },

  "tabs": {
    "file_icons": true,
    "close_position": "left",
    "show_diagnostics": "all",
    "git_status": true
  },

  "terminal": {
    "line_height": "standard"
  },

  "collaboration_panel": {
    "button": false
  },

  "notification_panel": {
    "button": false
  },

  "chat_panel": {
    "button": false
  },

  "lsp": {
    "rust-analyzer": {
      "initialization_options": {
        "checkOnSave": {
          "command": "clippy"
        }
      }
    }
  },

  "show_inline_completions": false,
  "assistant": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-3-5-sonnet"
    },
    "version": "2"
  }
}
