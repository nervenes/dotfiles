{
  "ui_font_size": 16,
  "ui_font_family": "SF Pro",

  "buffer_font_size": 14,
  "buffer_font_family": "SF Mono",
  "buffer_line_height": "standard",

  "restore_on_startup": "none",
  "format_on_save": "off",
  "autosave": {
    "after_delay": {
      "milliseconds": 1000
    }
  },

  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },

  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "One Dark"
  },

  "tabs": {
    "file_icons": true,
    "git_status": true,
    "close_position": "left"
  },

  "terminal": {
    "line_height": "standard"
  },

  "collaboration_panel": {
    "button": false
  },

  "notification_panel": {
    "button": false
  },

  "chat_panel": {
    "button": false
  },

  "lsp": {
    "rust-analyzer": {
      "initialization_options": {
        "checkOnSave": {
          "command": "clippy"
        }
      }
    }
  }
}
